//@version=5
strategy("ç„¡é™æœˆè®€", overlay=true, margin_long=0, margin_short=0,commission_value = 0.05,initial_capital = 1000,default_qty_type = strategy.cash,default_qty_value = 1000)
import leobitgetfire/backtest_leonard/9 as bl
current_month = month(time,'UTC+8')
current_day = dayofmonth(time,'UTC+8')
ma1 = ta.sma(close,1991 - 1968)
ma2 = ta.sma(close,2003 - 1968)
ma3 = ta.sma(close,2011 - 1968)
ma4 = ta.sma(close,2020 - 1968)

plot(ma1,color = color.white)
plot(ma2,color = color.red)
plot(ma3,color = color.green)
plot(ma4,color = color.blue)

days = input.int(1)


long_tri =  ta.crossover(close,ma1) 
short_tri = ta.crossunder(close,ma1) 
longCondition = ta.barssince(short_tri) > 1 ? long_tri : na
shortCondition = ta.barssince(long_tri) > 1 ? short_tri : na
[accept_long,accept_short] = bl.db(longCondition,shortCondition,days)
var float longtp = 0.
var float shorttp = 0.
float longstop = 0.
float shortstop = 0.
tpandloss = input.string('USDT','æ­¢ç›ˆæ–¹æ³•',options = ['USDT','%æ•¸'])
dd = input.float(80,'æ­¢æå¤§å°')
ss = input.float(160,'æ­¢ç›ˆå¤§å°')
float tp_value = 0.
float loss_value = 0.
if tpandloss == 'USDT'
    tp_value := ss
    loss_value := dd
else
    tp_value := close * (0.01 * ss)
    loss_value := close * (0.01* dd) 

if (longCondition) and accept_long
    longtp := close + tp_value
    longstop := close - loss_value
    entry_message = '<@&1038883069316309082>\n' + 'ğŸ®' + 'ç„¡é™æœˆè®€' + 'ğŸ®' +'\n' + 'æ—¥æœŸï¼š'+ str.tostring(current_month)+'/'+ str.tostring(current_day) + '\nå¹£ç¨®ï¼š' + syminfo.ticker + '\né»ä½ï¼š' + str.tostring(open) + '\næ–¹å‘ï¼šå¤š\n' + 'æ­¢æï¼š' + str.tostring(longstop) + '\næ­¢ç›ˆï¼š' + str.tostring(longtp) + '\nå»ºè­°ï¼šç›ˆåˆ©å¥—ä¿ï¼Œé™¸çºŒæ¸›å€‰'
    alert(entry_message,alert.freq_once_per_bar_close)
    strategy.entry('long', strategy.long)
    strategy.exit('long exit','long',stop = longstop,limit = longtp)


if (shortCondition) and accept_short
    shorttp := close - tp_value
    shortstop := close + loss_value
    entry_message = '<@&1038883069316309082>\n' + 'ğŸ®' + 'ç„¡é™æœˆè®€' + 'ğŸ®' +'\n' + 'æ—¥æœŸï¼š'+ str.tostring(current_month)+'/'+ str.tostring(current_day) + '\nå¹£ç¨®ï¼š' + syminfo.ticker + '\né»ä½ï¼š' + str.tostring(open) + '\næ–¹å‘ï¼šç©º\n' + 'æ­¢æï¼š' + str.tostring(shortstop) + '\næ­¢ç›ˆï¼š' + str.tostring(shorttp) + '\nå»ºè­°ï¼šç›ˆåˆ©å¥—ä¿ï¼Œé™¸çºŒæ¸›å€‰'
    alert(entry_message,alert.freq_once_per_bar_close)
    strategy.entry('short', strategy.short)
    strategy.exit('short exit','short',stop = shortstop,limit = shorttp)
